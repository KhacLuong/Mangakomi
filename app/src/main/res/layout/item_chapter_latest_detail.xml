<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_item"
    android:layout_marginEnd="@dimen/define_dimen_10"
    android:paddingTop="@dimen/define_dimen_10"
    android:layout_marginBottom="@dimen/define_dimen_4">
    <TextView
        android:id="@+id/tv_chapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/chapter"
        android:textSize="@dimen/define_dimen_14"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="1"
        tools:ignore="SpUsage" />
    <TextView
        android:id="@+id/tv_time_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_update"
        android:textColor="@color/black"
        android:textSize="@dimen/define_dimen_14"
        android:textStyle="italic"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/btn_down_chapter"
        android:layout_width="@dimen/define_dimen_30"
        android:layout_height="@dimen/define_dimen_30"
        android:padding="@dimen/define_dimen_6"
        android:src="@drawable/ic_baseline_download_24"
        android:elevation="@dimen/define_dimen_10"
        />

</LinearLayout>