<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:gravity="center"
    android:layout_margin="@dimen/define_dimen_6"
    android:background="@drawable/bg_gray_shape_corner_20"
    >
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        />-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/define_dimen_20">
        <RelativeLayout
            android:id="@+id/layout_overlay"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            >


            <ImageView

                android:id="@+id/img_manga_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/img_no_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/define_dimen_6"
                android:layout_marginEnd="@dimen/define_dimen_6"

                android:elevation="@dimen/define_dimen_10"

                tools:ignore="NotSibling">

                <TextView

                    android:id="@+id/tv_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_manga"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/define_dimen_26"
                    android:layout_marginEnd="@dimen/define_dimen_2"
                    android:background="@drawable/bg_white_shape_border_gray"
                    android:elevation="@dimen/define_dimen_10"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/define_dimen_6"
                    android:text="@string/read_now"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_star"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/define_dimen_2"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_white_shape_border_gray"
                    android:elevation="@dimen/define_dimen_10"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/define_dimen_4"
                    android:text="@string/chapter"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/define_dimen_10"
                    android:textStyle="bold"
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:id="@+id/layout_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_manga"
                    android:layout_marginBottom="@dimen/define_dimen_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_start1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_rate_24_yellow" />

                    <ImageView
                        android:id="@+id/img_start2"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_rate_24_yellow" />

                    <ImageView
                        android:id="@+id/img_start3"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_rate_24_yellow" />

                    <ImageView
                        android:id="@+id/img_start4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_rate_24_yellow" />
                    <ImageView
                        android:id="@+id/img_start5"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_rate_24_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/define_dimen_10"
                        android:text="5.0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/name_manga"
                    android:layout_width="@dimen/define_dimen_80"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/define_dimen_10"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>